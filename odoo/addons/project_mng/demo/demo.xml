<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- PROJECTS -->
    <record id="project_demo_1" model="project.project">
      <field name="name">Web Application Development</field>
      <field name="description">Project to develop a task management web application</field>
      <field name="initial_date">Desarrollo de Aplicacion Web</field>
      <field name="final_date">Desarrollo de Aplicacion Web</field>
      <!-- WORKER IDS -->
      <field name="color">2</field>
      <field name="state">first_impressions</field>
      <!-- 
        TASKS
        DOCUMENTS
        REPORTS
        MESSAGES
        RESOURCES
       -->
    </record>

    <!-- RESOURCES -->
    <record id="resource_demo_1" model="project.resource">
      <field name="description">Development Server</field>
      <field name="type">materials</field>
      <field name="availability">5</field>
    </record>

    <record id="resource_demo_2" model="project.resource">
      <field name="description">Financial Budget</field>
      <field name="type">financial</field>
      <field name="availability">1</field>
    </record>

    <record id="resource_demo_3" model="project.resource">
      <field name="description">Senior Developer</field>
      <field name="type">human_resources</field>
      <field name="availability">1</field>
    </record>

    <!-- TASKS -->
    <record id="task_demo_1" model="project.task">
      <field name="name">Design User Interface</field>
      <field name="description">Create the user interface design for the web application.</field>
      <field name="initial_date">2024-02-01</field>
      <field name="final_date">2024-02-15</field>
      <field name="state">to_do</field>
      <!-- WORKER -->
      <field name="project_id" ref="project_demo_1" />
      <field name="comment">This task requires collaboration with the design team.</field>
      <field name="priority">2</field>
    </record>

    <record id="task_demo_2" model="project.task">
      <field name="name">Backend Development</field>
      <field name="description">Implement backend functionality for the web application.</field>
      <field name="initial_date">2024-02-20</field>
      <field name="final_date">2024-03-15</field>
      <field name="state">to_do</field>
      <!-- WORKER -->
      <field name="project_id" ref="project_demo_1" />
      <field name="comment">Backend tasks require expertise in Python and Django.</field>
      <field name="priority">2</field>
    </record>

    <record id="task_demo_3" model="project.task">
      <field name="name">Frontend Development</field>
      <field name="description">Implement frontend functionality for the web application.</field>
      <field name="initial_date">2024-03-01</field>
      <field name="final_date">2024-03-20</field>
      <field name="state">to_do</field>
      <!-- WORKER -->
      <field name="project_id" ref="project_demo_1" />
      <field name="comment">Frontend tasks involve HTML, CSS, and JavaScript development.</field>
      <field name="priority">2</field>
    </record>

    <record id="task_demo_4" model="project.task">
      <field name="name">Testing and QA</field>
      <field name="description">Conduct testing and quality assurance for the web application.</field>
      <field name="initial_date">2024-04-01</field>
      <field name="final_date">2024-04-15</field>
      <field name="state">to_do</field>
      <!-- WORKER -->
      <field name="project_id" ref="project_demo_1" />
      <field name="comment">Testing tasks are crucial to ensure the application's reliability.</field>
      <field name="priority">2</field>
    </record>
  </data>
</odoo>